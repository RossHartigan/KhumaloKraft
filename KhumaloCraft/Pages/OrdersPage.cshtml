@page
@model KhumaloCraft.Pages.OrdersPageModel
@{
}


<!DOCTYPE html>
<html>

<head>
    <title>My Orders</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-image: url('/Images/background.jpg');
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
            margin: 0;
            padding-top: 40px;
        }

        .header {
            text-align: center;
            font-size: 10rem;
            color: orange;
            text-transform: uppercase;
            text-shadow: 2px 2px 2px #000;
        }

        h1 {
            text-align: center;
            font-size: 4rem;
            color: black;
            text-transform: uppercase;
            text-shadow: 2px 2px 2px white;
            font-family: 'Garamond', serif;
        }

        .navbar-nav .nav-item a {
            transition: color 0.3s, background-color 0.3s;
        }

            .navbar-nav .nav-item a:hover {
                color: darkblue;
                background-color: darkgrey;
            }

        .navbar {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            background-color: #fff;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
            z-index: 1000;
        }

        .navbar-nav {
            margin-top: 10px;
        }

        .navbar-brand {
            padding: 10px 15px;
        }

        .navbar-toggler {
            display: none;
        }

        .work-container {
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            gap: 20px;
            padding: 20px;
        }

        .work-item {
            text-align: center;
            max-width: 300px;
        }

            .work-item img {
                max-width: 100%;
                border-radius: 10px;
            }

            .work-item h3 {
                margin-top: 10px;
                font-size: 1.5rem;
                font-family: 'Garamond', serif;
            }

            .work-item p {
                margin-top: 5px;
                font-size: 1.2rem;
                color: #666;
                font-family: 'Garamond', serif;
            }

        p {
            font-size: 1.75rem;
            line-height: 1.6;
            color: #333;
            font-family: 'Garamond', serif;
        }
    </style>
</head>

<body>

    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/HomePage">HOME PAGE</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <br />
    <br />
    <br />

    <h1>MY ORDERS</h1>

    <br />
    <br />
    <br />
    <br />
    <br />
    <br />

    <div class="container">
        <div class="row">
            <div class="col">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Product Name</th>
                            <th>Category</th>
                            <th>Quantity</th>
                            <th>Order Status</th>
                            <th>Sale Price</th>                            
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            double total = 0;
                            foreach (var order in Model.Orders)
                            {
                                total += order.SalePrice;
                            }
                        }

                        @foreach (var order in Model.Orders)
                        {
                            <tr>
                                <td>@order.ProductName</td>
                                <td>@order.Category</td>
                                <td>@order.Quantity</td>
                                <td>@order.OrderStatus</td>
                                <td>R @order.SalePrice</td>                                
                            </tr>
                        }
                        <tr>
                            <td colspan="4" style="text-align: left;"><strong>Total Spent:</strong></td>
                            <td><strong>R @total</strong></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>


</body>



</html>
