@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


<!DOCTYPE html>
<html>

<head>
    <title>Home Page</title>
    <style>

        body {
            font-family: Arial, sans-serif;
            background-image: url('/Images/spread.jpg');
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
            margin: 0;
        }

        .header {
            text-align: center;
            font-size: 10rem;
            color: white;
            text-transform: uppercase;
            text-shadow: 2px 2px 2px #000;
        }

        h1 {
            text-align: center;
            font-size: 4rem;
            color: black;
            text-transform: uppercase;
            text-shadow: 2px 2px 2px white;
            font-family: 'Garamond', serif;
        }

        img {
            width: 250px;
            height: auto;
            display: block;
            margin: 0 auto;
            border-radius: 25px;
        }

        .clickable-image {
            text-align: left;
        }

        .btn-container {
            text-decoration: none;
            display: block;
            transition: transform 0.3s, background-color 0.3s;
        }

        .btn-content {
            border: none;
            box-shadow: none;
            text-align: center;
            padding: 10px;
            padding-left: 10px;
            padding-right: 10px;
        }

        .btn-image {
            max-width: 125%;
        }

        .btn-container:hover .btn-content {
            transform: scale(1.3);
        }

        .login-container {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            text-align: center;
            max-width: 400px;
            width: 100%;
            margin: 0 auto;
        }

        input[type="text"],
        input[type="password"] {
            width: 100%;
            padding: 10px;
            margin-bottom: 20px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

        input[type="submit"] {
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 4px;
            padding: 10px 20px;
            cursor: pointer;
        }

            input[type="submit"]:hover {
                background-color: #0056b3;
            }

    </style>
</head>

<body>
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />   
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />

    <div class="login-container">
        <h1>Login</h1>
        <form method="post"  asp-page-handler="Login">
            <input type="text" name="email" placeholder="E-Mail" required>
            <br>
            <input type="password" name="password" placeholder="Password" required>
            <br>
            <input type="submit" value="Login">
        </form>
        <br/>
        <div class="register-link">
            <p>Don't have an account? <a asp-page="/RegisterPage">Register here</a></p>
        </div>
    </div>

</body>

</html>
