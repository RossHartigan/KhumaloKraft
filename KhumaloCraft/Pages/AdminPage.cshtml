@page
@model KhumaloCraft.Pages.AdminPageModel
@{
}


<!DOCTYPE html>
<html>

<head>
    <title>Home Page</title>
    <style>

        body {
            font-family: Arial, sans-serif;
            background-image: url('/Images/background.jpg');
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
            margin: 0;
        }

        .header {
            text-align: center;
            font-size: 10rem;
            color: white;
            text-transform: uppercase;
            text-shadow: 2px 2px 2px #000;
        }

        h1 {
            text-align: center;
            font-size: 4rem;
            color: black;
            text-transform: uppercase;
            text-shadow: 2px 2px 2px white;
            font-family: 'Garamond', serif;
        }

        .navbar-nav .nav-item a {
            transition: color 0.3s, background-color 0.3s;
        }

            .navbar-nav .nav-item a:hover {
                color: darkblue;
                background-color: darkgrey;
            }

        .navbar {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            background-color: #fff;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
            z-index: 1000;
        }

        .navbar-nav {
            margin-top: 10px;
        }

        .navbar-brand {
            padding: 10px 15px;
        }

        .navbar-toggler {
            display: none;
        }

        .form-container {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            text-align: center;
            max-width: 400px;
            width: 100%;
            margin: 0 auto;
        }

        input[type="text"],
        input[type="number"],
        select {
            width: 100%;
            padding: 10px;
            margin-bottom: 20px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

        input[type="submit"] {
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 4px;
            padding: 10px 20px;
            cursor: pointer;
        }

            input[type="submit"]:hover {
                background-color: #0056b3;
            }

    </style>
</head>

<body>

    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">LOG OUT</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />

    <h1>ALL ORDERS</h1>

    <br />
    <br />
    <br />
    <br />
    <br />   
    <br />


    <table class="table">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>User ID</th>
                <th>Product ID</th>
                <th>Quantity</th>
                <th>Sale Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model.Orders.Where(o => !o.Processed))
            {
                <tr>
                    <td>@order.TransactionID</td>
                    <td>@order.UserID</td>
                    <td>@order.ProductID</td>
                    <td>@order.Quantity</td>
                    <td>@order.SalePrice</td>
                    <td>
                        <form method="post" asp-page-handler="ProcessOrder">
                            <input type="hidden" name="id" value="@order.TransactionID" />
                            <button type="submit" name="processOrder" class="btn btn-primary">PROCESS ORDER</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>

    </table>

    <br />
    <br />
    <br />
    <br />
    <br />
    <br />

    <table class="table">

        <thead>
            <tr>
                <th>User ID</th>
                <th>E-Mail</th>
                <th>Name</th>
                <th>Surname</th>
                <th>Admin Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.users.Where(o => !o.Admin))
            {
                <tr>
                    <td>@user.UserID</td>
                    <td>@user.Email</td>
                    <td>@user.Name</td>
                    <td>@user.Surname</td>
                    <td>@user.Admin</td>
                    <td>
                        <form method="post" asp-page-handler="AdminStatus">
                            <input type="hidden" name="userid" value="@user.UserID" />
                            <button type="submit" name="makeadmin" class="btn btn-primary">MAKE ADMIN</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>

    </table>

    <br />
    <br />
    <br />
    <br />

    <h1>All Items</h1>

    <br />
    <br />
    <br />

    <table class="table">

        <thead>
            <tr>
                <th>Product ID</th>
                <th>Product Name</th>
                <th>Description</th>
                <th>Quantity</th>
                <th>Category</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.ProductID</td>
                    <td>@product.Name</td>
                    <td>@product.Description</td>
                    <td>@product.Quantity</td>
                    <td>@product.Category</td>
                    <td>
                        <form method="post" asp-page-handler="DeleteProduct">
                            <input type="hidden" name="productid" value="@product.ProductID" />
                            <button type="submit" name="deleteproduct" class="btn btn-primary">DELETE ITEM</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>

    </table>


    <h1>ADD ITEMS</h1>

    <br />
    <br />
    <br />
   
    <div class="form-container">
        <form method="post" asp-page-handler="AddItem">
            <input type="text" name="name" placeholder="Item Name" required>
            <input type="text" name="description" placeholder="Short Description" required>
            <input type="number" name="quantity" placeholder="Quantity" min="1" required>
            <input type="text" name="price" placeholder="Price per Item" required>
            <select name="category" required>
                <option value="" disabled selected>Select Category</option>
                <option value="Chairs">Chairs</option>
                <option value="Shelves">Shelves</option>
                <option value="Tables">Tables</option>
                <option value="Other">Other</option>
            </select>
            <input type="submit" value="Add Item">
        </form>
    </div>


</body>
</html>
