@page
@model KhumaloCraft.Pages.MyWorkPageModel
@{
}


<!DOCTYPE html>
<html>

<head>
    <title>My Work</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-image: url('/Images/background.jpg');
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
            margin: 0;
            padding-top: 40px;
        }

        .header {
            text-align: center;
            font-size: 10rem;
            color: orange;
            text-transform: uppercase;
            text-shadow: 2px 2px 2px #000;
        }

        h1 {
            text-align: center;
            font-size: 4rem;
            color: black;
            text-transform: uppercase;
            text-shadow: 2px 2px 2px white;
            font-family: 'Garamond', serif;
        }

        .navbar-nav .nav-item a {
            transition: color 0.3s, background-color 0.3s;
        }

            .navbar-nav .nav-item a:hover {
                color: darkblue;
                background-color: darkgrey;
            }

        .navbar {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            background-color: #fff;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
            z-index: 1000;
        }

        .navbar-nav {
            margin-top: 10px;
        }

        .navbar-brand {
            padding: 10px 15px;
        }

        .navbar-toggler {
            display: none;
        }

        .work-container {
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            gap: 20px;
            padding: 20px;
        }

        .work-item {
            text-align: center;
            max-width: 300px;
        }

            .work-item img {
                max-width: 100%;
                border-radius: 10px;
            }

            .work-item h3 {
                margin-top: 10px;
                font-size: 1.5rem;
                font-family: 'Garamond', serif;
            }

            .work-item p {
                margin-top: 5px;
                font-size: 1.2rem;
                color: #666;
                font-family: 'Garamond', serif;
            }

        p {
            font-size: 1.75rem;
            line-height: 1.6;
            color: #333;
            font-family: 'Garamond', serif;
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">HOME PAGE</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <br />
    <br />
    <br />

    <h1>MY WORK</h1>

    <br />
    <br />
    
    <p>
        Here are some of the handcrafted items that show the skill and level of quality that we aim to bring to KhumaloCraft.
    </p>

    <br />
    <br />

    <div class="work-container">
        <div class="work-item">
            <img src="/Images/bedside.jpeg" alt="Image_1">
            <h3>Bedside Tables</h3>
            <p>R1999.99</p>
        </div>
        <div class="work-item">
            <img src="/Images/shelf.jpeg" alt="Image_2">
            <h3>Shelf</h3>
            <p>R999.99</p>
        </div>
        <div class="work-item">
            <img src="/Images/bench.jpeg" alt="Image_3">
            <h3>Bench</h3>
            <p>R499.99</p>
        </div>
    </div>
</body>

</html>

